<spm-monitor-config>

  <logging>
    <basedir>${spm_monitor_application_specific_logs_dir}</basedir>
    <maxFileSize>10MB</maxFileSize>
    <level>${spm_monitor_logging_level}</level>
  </logging>

  <collectors class="com.sematext.spm.client.haproxy.factory.HAProxyStatsFactory">
    <param name="statsUrl" value="${spm_monitor_haproxy_stats_url}"/>
    <param name="user" value="${spm_monitor_haproxy_user}" required="false"/>
    <param name="password" value="${spm_monitor_haproxy_password}" required="false"/>
  </collectors>

  <collectors class="com.sematext.spm.client.tag.TagCollectorsFactory">
    <param name="tags" required="false" value="${spm_monitor_tags}"/>
    <param name="suppressTags" required="false" value="${spm_suppress_tags}"/>
  </collectors>

  <collectors class="com.sematext.spm.client.tag.AWSTagCollectorsFactory">
    <param name="updateInterval" value="300000"/>
    <param name="suppressTags" required="false" value="${spm_suppress_tags}"/>
    <param name="enabled" value="${collect_aws_tags}"/>
  </collectors>

  <!-- Monitor data collection interval defined in ms. If undefined, default value will be 10 seconds.
       Monitor will collect data from all sources (JMX, JSON, DB...) every "monitor-interval" ms -->
  <monitor-collect-interval>${spm_monitor_collect_interval}</monitor-collect-interval>

  <!-- Reloading interval for Monitor configuration defined in ms. If undefined, default value will be 60 seconds. After
       interval passes, xml configuration will be reloaded. -->
  <reload-interval>60000</reload-interval>

  <!-- First reloading interval defines how much time after the start of java process first reload of configuration and JMX
       data should happen. In systems which take long time to start it makes sense to put higher value into this interval (say 3 minutes),
       while in light setups it make sense to keep it lower (say 15 seconds)  -->
  <first-reload-interval>30000</first-reload-interval>
</spm-monitor-config>
